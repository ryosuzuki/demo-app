<div id="users-index">
  <% if current_user %>
  <p>
    Hello
    <%= link_to "@#{current_user.username}", user_path(current_user.username) %>
  </p>
  <% else %>
  <p>
    <%= link_to "Connect Twitter", "/auth/twitter" %>
  </p>
  <% end %>

  <h1>Users</h1>
  <% @users.each do |user| %>
  <div class="user">
    <%= link_to "@#{user.username}", user_path(user.username) %>
  </div>
  <% end %>
</div>
